@model S2Games.Database.Models.Game

@{
    ViewBag.Title = "Editar Jogo";
}

@using (Html.BeginForm("Edit", "Game", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.LentForId)

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">
                    <label class="control-label">Nome do Jogo</label>
                    @Html.EditorFor(model => model.Label, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-lg-6">
                    <label class="control-label">Gênero</label>
                    @Html.EnumDropDownListFor(model => model.Genre, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            <a class="btn btn-danger" href="/Game"><i class="glyphicon glyphicon-remove"></i> Cancelar</a>
            <div class="pull-right">
                <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i> Salvar</button>
            </div>
        </div>
    </div>
}